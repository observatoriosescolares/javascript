	document.getElementById("presion").src=url36;
	$("#seleccion").on("change", function() {
      		var url4 = "constructor_grafica.html?proveedor="+proveedor+"&color=F9DB15&uni=C&parametro=temperatura&frecuencia=4&max=30&min=0&pre=0&uni=C&rango="+$(this).val();
		document.getElementById("temperatura").src=url4;
    	})  
	$("#seleccion").on("change", function() {
